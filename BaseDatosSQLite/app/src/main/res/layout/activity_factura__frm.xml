    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Resumen Compra"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Detalle del Cliente"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_height="match_parent" />

        </LinearLayout>
        
        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="100"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="ClientID: "
            android:textSize="20sp"
            android:layout_weight="80"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"

            android:textSize="20sp"
            android:id="@+id/cid"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="100"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"

                android:textSize="20sp"
                android:layout_weight="75"
                android:text="Nombre Cliente: "
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"

android:id="@+id/cname"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="100"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Telefono Cliente: "
                android:textSize="20sp"
                android:layout_weight="80"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:id="@+id/cphone"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
android:layout_marginTop="25dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Detalle Del Producto"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="100"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="ProductID: "
                android:textSize="20sp"
                android:layout_weight="80"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
android:id="@+id/pid"                android:textSize="20sp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="100"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Nombre Producto: "
                android:textSize="20sp"
                android:layout_weight="75"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
android:id="@+id/pname"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="100"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Precio Producto: "
                android:textSize="20sp"
                android:layout_weight="80"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/pprice"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/ok"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
