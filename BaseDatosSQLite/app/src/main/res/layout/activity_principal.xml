<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="torres.basedatossqlite.Principal">
    <TextView android:text="Mini Punto de Ventas" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Titulo_Lab"
        android:textSize="20dp"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Productos"
        android:id="@+id/ListaProductos_Btn"
        android:layout_below="@+id/ListaClientes_Btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ListaClientes_Btn"
        android:layout_alignEnd="@+id/ListaClientes_Btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Clientes"
        android:id="@+id/ListaClientes_Btn"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/Titulo_Lab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sincronizar"
        android:id="@+id/Sincroniza_Btn"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_invoice"
        android:layout_alignEnd="@+id/button_invoice" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X- Salir"
        android:id="@+id/Salir_Btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Titulo_Lab"
        android:layout_alignEnd="@+id/Titulo_Lab" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Factura"
        android:id="@+id/button_invoice"
        android:layout_below="@+id/ListaProductos_Btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ListaProductos_Btn"
        android:layout_alignEnd="@+id/ListaProductos_Btn" />

</RelativeLayout>
